<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eliminartarea"
    android:background="@color/colorTercero">

    <TextView
        android:id="@+id/textView_eliminartitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar tarea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        style="@style/AppTheme.Text"/>

    <EditText
        android:id="@+id/editText_eliminar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese ID a eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_eliminartitulo"
        app:layout_constraintVertical_bias="0.115"
        tools:layout_editor_absoluteX="41dp"
        style="@style/AppTheme.EditText"/>

    <Button
        android:id="@+id/button_eliminartarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar tarea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_eliminar_id"
        app:layout_constraintVertical_bias="0.231"
        tools:layout_editor_absoluteX="16dp"
        style="@style/AppTheme.Button"/>

    <Button
        android:id="@+id/button_eliminar_volver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_eliminartarea"
        app:layout_constraintVertical_bias="0.041"
        tools:layout_editor_absoluteX="16dp"
        style="@style/AppTheme.Button"
        android:onClick="VolverACrudIndex"/>
</androidx.constraintlayout.widget.ConstraintLayout>